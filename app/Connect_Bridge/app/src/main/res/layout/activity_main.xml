<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_connect"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Connect"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/text_bridge"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Bridge"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/text_connect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <ImageView
        android:id="@+id/Vision_Start"
        android:layout_width="205dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="centerInside"
        android:contentDescription="시작 이미지"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_bridge"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/Mobility_start"
        android:layout_width="205dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="centerInside"
        android:contentDescription="지체 이미지"
        app:layout_constraintTop_toTopOf="@id/Vision_Start"
        app:layout_constraintBottom_toBottomOf="@id/Vision_Start"
        app:layout_constraintStart_toEndOf="@id/Vision_Start"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
