<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9">
    <!-- 상단 제목 -->

    <!-- 중간 텍스트 -->

    <TextView
        android:id="@+id/text_connect"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="56dp"
        android:text="Connect"
        android:textAlignment="center"
        android:textColor="#388E3C"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_bridge"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:text="Bridge"
        android:textAlignment="center"
        android:textColor="#4CAF50"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.577"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_connect" />

    <ImageView
        android:id="@+id/Vision_Start"
        android:layout_width="386dp"
        android:layout_height="730dp"
        android:background="#A5D6A7"
        android:contentDescription="시작 이미지"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Mobility_start" />

    <ImageView
        android:id="@+id/Mobility_start"
        android:layout_width="380dp"
        android:layout_height="730dp"
        android:background="#81C784"
        android:contentDescription="지체 이미지"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_bridge"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
