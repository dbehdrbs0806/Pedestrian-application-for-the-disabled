<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_connect"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Connect"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="50dp" />

    <TextView
        android:id="@+id/text_bridge"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Bridge"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="102dp" />

    <ImageView
        android:id="@+id/Vision_Start"
        android:layout_width="205dp"
        android:layout_height="730dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/start_image"
        android:scaleType="centerInside"
        android:contentDescription="시작 이미지"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/Mobility_start"
        android:layout_width="205dp"
        android:layout_height="730dp"
        android:src="@drawable/delay_image"
        android:scaleType="centerInside"
        android:contentDescription="지체 이미지"
        app:layout_constraintStart_toEndOf="@id/image_start"
        tools:layout_editor_absoluteX="209dp"
        tools:layout_editor_absoluteY="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
